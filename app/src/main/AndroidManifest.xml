<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="baron.severin.daggerlesson">

    <!-- TODO to switch between manual and automatic, change application name, then set correct activity to launcher -->
    <!-- Manual: android:name=".manual.ManualApp" -->
    <!-- Automatic: android:name=".automatic.AutoApp" -->
    <application
        android:name=".manual.ManualApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".manual.ManualActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- Uncomment this to launch here -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auto.AutoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- Uncomment this to launch here -->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>
    </application>

</manifest>